{
    "openapi": "3.0.0",
    "info": {
      "title": "Nuvem Connect - API",
      "description": "API for account management",
      "version": "0.1.0"
    },
    "servers": [
      {
        "url": "http://localhost:3000",
        "description": "Development server"
      }
    ],
    "paths": {
      "/account": {
        "post": {
          "summary": "Create a new account",
          "tags": ["Account"],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "email": {
                      "type": "string",
                      "format": "email"
                    },
                    "password": {
                      "type": "string",
                      "minLength": 8,
                      "pattern": "^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d)(?=.*[!@#$%^&*])[A-Za-z\\d!@#$%^&*]{8,}$"
                    },
                    "passwordConfirmation": {
                      "type": "string",
                      "minLength": 8
                    }
                  },
                  "required": ["email", "password", "passwordConfirmation"]
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Account created successfully",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "uuid": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Bad request",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": {
                        "type": "string"
                      },
                      "errors": {
                        "type": "object",
                        "additionalProperties": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  },
                  "examples": {
                    "invalidEmail": {
                      "value": {
                        "message": "Invalid input",
                        "errors": {
                          "email": [
                            "Invalid email"
                          ]
                        }
                      }
                    },
                    "invalidPassword": {
                      "value": {
                        "error": "Bad Request",
                        "message": "Password does not meet the required criteria"
                      }
                    },
                    "accountExists": {
                      "value": {
                        "error": "Bad Request",
                        "message": "Account already exists"
                      }
                    },
                    "passwordMismatch": {
                      "value": {
                        "error": "Invalid input",
                        "message": "Password confirmation different from password"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/login": {
        "post": {
          "summary": "Login to an existing account",
          "tags": ["Account"],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "email": {
                      "type": "string",
                      "format": "email"
                    },
                    "password": {
                      "type": "string"
                    }
                  },
                  "required": ["email", "password"]
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Login successful",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "token": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Bad request",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }